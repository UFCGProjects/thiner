<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud_background"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp" >

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/edittext_default_bg"
            android:drawableLeft="@drawable/user"
            android:hint="@string/firstName"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbbbbb" />

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/editTextFirstName"
            android:background="@drawable/edittext_default_bg"
            android:drawableLeft="@drawable/user"
            android:hint="@string/lastName"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbbbbb" />
        
         <EditText
             android:id="@+id/editTextNewPassword"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/editTextLastName"
             android:layout_marginBottom="4dp"
             android:background="@drawable/edittext_default_bg"
             android:drawableLeft="@drawable/password"
             android:hint="New password"
             android:inputType="textWebPassword"
             android:padding="10dp"
             android:singleLine="true"
             android:textColorHint="#bbbbbb" >

        </EditText>
         <EditText
            android:id="@+id/editTextConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/editTextNewPassword"
            android:inputType="textWebPassword" 
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#bbbbbb"
            android:background="@drawable/edittext_default_bg"
            android:hint="Confirm new password"
            android:drawableLeft="@drawable/password">

        </EditText>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        android:layout_centerHorizontal="true"
        android:padding="10dp" >

        <Button
            android:id="@+id/btnSaveNameChange"
            style="@style/DefaultButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_default_bg"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:padding="10dp"
            android:text="@string/saveChange" />

        <Button
            android:id="@+id/btnEditNumber"
            style="@style/DefaultButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSaveNameChange"
            android:background="@drawable/button_default_bg"
            android:drawableLeft="@drawable/ic_menu_edit"
            android:padding="10dp"
            android:text="@string/editYoursContacts" />
    </RelativeLayout>

</RelativeLayout>