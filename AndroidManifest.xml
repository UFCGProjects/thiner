<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thiner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.thiner.screen.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thiner.screen.signin.SignInActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.thiner.screen.main.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thiner.screen.main.MainActivity" />
        </activity>
        <activity
            android:name="com.thiner.screen.signup.SignUPActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.thiner.screen.main.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thiner.screen.main.MainActivity" />
        </activity>
        <activity
            android:name="com.thiner.screen.profile.ProfileActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.thiner.screen.main.SignInActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thiner.screen.main.MainActivity" />
        </activity>
    </application>

</manifest>